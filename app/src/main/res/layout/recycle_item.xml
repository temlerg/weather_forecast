<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:background="#E0E0E0"
    android:layout_marginTop="2dp"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#E0E0E0">

        <TextView
            android:id="@+id/block_for_5"
            style="@style/botton2"
            android:layout_width="350dp"
            android:layout_height="100dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/temp_for_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:textSize="45dp"
            app:layout_constraintStart_toStartOf="@+id/block_for_5"
            app:layout_constraintTop_toTopOf="@+id/block_for_5" />

        <ImageView
            android:id="@+id/ic_for_5"
            android:layout_width="92dp"
            android:layout_height="92dp"
            android:layout_marginEnd="116dp"
            app:layout_constraintBottom_toBottomOf="@+id/block_for_5"
            app:layout_constraintEnd_toEndOf="@+id/block_for_5"
            app:layout_constraintTop_toTopOf="@+id/block_for_5"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/status_for_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="8dp"
            android:textColor="#000"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="@+id/block_for_5"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/time_for_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="24dp"
            android:textColor="#000"
            android:textSize="16dp"
            app:layout_constraintEnd_toEndOf="@+id/block_for_5"
            app:layout_constraintTop_toTopOf="@+id/block_for_5" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>